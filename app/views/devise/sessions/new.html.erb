<div class='flex items-center justify-center min-h-screen from-teal-100 via-teal-300 to-teal-500 bg-gradient-to-br'>
		<div class='w-full max-w-lg px-10 py-8 mx-auto bg-white rounded-lg shadow-xl'>
			<div class='max-w-md mx-auto space-y-6'>
					<h2 class="text-2xl font-bold ">Sign in</h2>
					<hr class="my-6">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email, class:"uppercase text-sm font-bold opacity-70" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"p-3 mt-2 mb-4 w-full bg-slate-200 rounded border-2 border-slate-200 focus:border-slate-600 focus:outline-none" %>
            </div>

            <div class="field">
              <%= f.label :password, class:"uppercase text-sm font-bold opacity-70" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class:"p-3 mt-2 mb-4 w-full bg-slate-200 rounded border-2 border-slate-200 focus:border-slate-600 focus:outline-none" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me, class:"checkbox" %>
                <%= f.label :remember_me, class:"my-2 font-medium opacity-70" %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", data: {turbo: false}, class:"py-3 px-6 my-2 bg-emerald-500 text-white font-medium rounded hover:bg-indigo-500 cursor-pointer ease-in-out duration-300" %>
            </div>
          <% end %>
        <%= render "devise/shared/links" %>
	  </div>
	</div>
</div>

