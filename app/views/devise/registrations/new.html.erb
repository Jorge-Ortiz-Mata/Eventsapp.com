<div class='flex items-center justify-center min-h-screen from-teal-100 via-teal-300 to-teal-500 bg-gradient-to-br'>
		<div class='w-full max-w-lg px-10 py-8 mx-auto bg-white rounded-lg shadow-xl'>
			<div class='max-w-md mx-auto space-y-6'>
					<h2 class="text-2xl font-bold ">Sign up</h2>
					<hr class="my-6">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :email, class:"uppercase text-sm font-bold opacity-70" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"p-3 mt-2 mb-4 w-full bg-slate-200 rounded border-2 border-slate-200 focus:border-slate-600 focus:outline-none" %>
            </div>

            <div class="field">
              <%= f.label :password, class:"uppercase text-sm font-bold opacity-70" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class:"p-3 mt-2 mb-4 w-full bg-slate-200 rounded border-2 border-slate-200 focus:border-slate-600 focus:outline-none" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, class:"uppercase text-sm font-bold opacity-70" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"p-3 mt-2 mb-4 w-full bg-slate-200 rounded border-2 border-slate-200 focus:border-slate-600 focus:outline-none" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", data: {turbo: false}, class:"py-3 px-6 my-2 bg-emerald-500 text-white font-medium rounded hover:bg-indigo-500 cursor-pointer ease-in-out duration-300" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
	</div>
</div>
