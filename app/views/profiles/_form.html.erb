<%= render "shared/errors", obj: profile %>
<%= form_with(model: profile) do |form| %>
  
  <div>
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :birth, style: "display: block" %>
    <%= form.date_field :birth %>
  </div>

  <div>
    <%= form.label :phone_number, style: "display: block" %>
    <%= form.telephone_field :phone_number %>
  </div>

  <div>
    <%= form.label :genre, style: "display: block" %>
    <%= form.select :genre, ["Male", "Female"] %>
  </div>

