<div class="flex min-h-screen items-center justify-center">
    <div class="min-h-1/2 bg-gray-900  border border-gray-900 rounded-2xl">
        <div class="mx-4 sm:mx-24 md:mx-34 lg:mx-56 mx-auto  flex items-center space-y-4 py-16 font-semibold text-gray-500 flex-col">
				      <img src="https://flowbite.com/docs/images/logo.svg" class="mr-1 h-8" alt="Flowbite Logo" />
            <h1 class="text-white text-2xl">New profile.</h1>
            <%= render "shared/errors", obj: profile %>
            <%= form_with(model: profile) do |form| %>
              
              <div>
                <%= form.label :first_name, style: "display: block" %>
                <%= form.text_field :first_name, class:"w-full p-2 bg-gray-900 rounded-md  border border-gray-700 focus:border-blue-700", placeholder: "Taylor" %>
              </div>

              <div>
                <%= form.label :last_name, style: "display: block" %>
                <%= form.text_field :last_name, class:"w-full p-2 bg-gray-900 rounded-md  border border-gray-700 focus:border-blue-700", placeholder: "Smith" %>
              </div>

              <div>
                <%= form.label :birth, style: "display: block" %>
                <%= form.date_field :birth, class:"w-full p-2 bg-gray-900 rounded-md  border border-gray-700 focus:border-blue-700" %>
              </div>

              <div>
                <%= form.label :phone_number, style: "display: block" %>
                <%= form.telephone_field :phone_number, class:"w-full p-2 bg-gray-900 rounded-md  border border-gray-700 focus:border-blue-700", placeholder: "7629282738" %>
              </div>

              <div>
                <%= form.label :genre, style: "display: block" %>
                <%= form.select :genre, ["Male", "Female"] %>
              </div>

              <div>
                <%= form.label :location, style: "display: block" %>
                <%= form.select :location, ["United States", "MÃ©xico", "Canada", "Argentina", "Chile", "Brazil", "Spain", "England"] %>
              </div>

              <div>
                <%= form.submit class:"bg-green-700 text-white font-semibold py-2 px-5 text-sm mt-6 inline-flex items-center group" %>
              </div>
            <% end %>
            
        </div>
    </div>
</div>
