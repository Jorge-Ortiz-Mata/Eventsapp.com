<div class="p-10">
<%= render "shared/errors", obj: @event %>

<%= form_with(model: @event) do |form| %>

  <div>
    <%= form.label :title, style: "display: block", class:"uppercase text-sm font-bold opacity-70" %>
    <%= form.text_field :title, class:"p-3 mt-2 mb-4 w-full bg-slate-200 rounded border-2 border-slate-200 focus:border-slate-600 focus:outline-none" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block", class:"uppercase text-sm font-bold opacity-70" %>
    <%= form.rich_text_area :description, class:"p-3 mt-2 mb-4 w-full bg-slate-200 rounded border-2 border-slate-200 focus:border-slate-600 focus:outline-none" %>
  </div>

  <div>
    <%= form.label :event_date, style: "display: block", class:"uppercase text-sm font-bold opacity-70" %>
    <%= form.date_field :event_date, class:"p-3 mt-2 mb-4 w-full bg-slate-200 rounded border-2 border-slate-200 focus:border-slate-600 focus:outline-none" %>
  </div>

  <div>
    <%= form.submit class:"bg-green-700 text-white font-semibold py-2 px-5 text-sm mt-6 inline-flex items-center group" %>
  </div>
<% end %>
</div>