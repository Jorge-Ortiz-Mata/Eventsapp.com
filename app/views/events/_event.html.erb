<br><div id="<%= dom_id event %>">
  <p>
    <strong>Title:</strong>
    <%= event.title %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= event.description %>
  </p>
  <p>
    <strong>Event date:</strong>
    <%= event.event_date %>
  </p>
  <p>
    <strong>Organized by:</strong>
    <%= event.user.email %>
  </p>
  <p>
    <% if @today_date < event.event_date %>
      <%= link_to "Attend to this event", "#" %>
    <% else %>
      Event ended.
    <% end %>
  </p>
  <br>
  <div>
    <%= link_to "Edit this event", edit_event_path(event) if current_user.id == event.user_id %><br>
    <%= button_to "Destroy this event", event, method: :delete if current_user.id == event.user_id %>
  </div>
</div><br>
